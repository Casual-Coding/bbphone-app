<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kristofdreier.bbphone" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".25" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="NetworkStatus">
        <param name="ios-package" value="CDVConnection" />
    </feature>
    <name>bbPhone</name>
    <description>
        An iPhone client for the mods.de boards.
    </description>
    <author email="kontakt@kristofdreier.de" href="http://kristofdreier.de">
        Kristof Dreier
    </author>
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-translucent" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <icon src="www/assets/icons/Icon.png" />
    <icon gap:platform="ios" height="57" src="www/assets/icons/Icon.png" width="57" />
    <icon gap:platform="ios" height="60" src="www/assets/icons/Icon-60.png" width="60" />
    <icon gap:platform="ios" height="72" src="www/assets/icons/Icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="www/assets/icons/Icon@2x.png" width="114" />
    <icon gap:platform="ios" height="120" src="www/assets/icons/Icon-60@2x.png" width="120" />
    <icon gap:platform="ios" height="144" src="www/assets/icons/Icon-72@2x.png" width="144" />
    <icon gap:platform="ios" height="180" src="www/assets/icons/Icon-60@3x.png" width="180" />
    <access origin="*" />
</widget>

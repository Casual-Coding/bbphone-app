<div class="post-list-item-wrapper">
  <header class="post-header">
    <div class="meta">
      <span class="username">{{user.name}}</span>
      <span class="date">{{date "DD.MM.YYYY HH:mm:ss" date}}</span>
    </div>
  </header>
  <div class="post-content">
    <div class="post-avatar">
      <img src="http://forum.mods.de/bb/{{avatar}}">
    </div>
    <div class="post-text">
      {{{bbcode content}}}

      {{#if edited}}
        <div class="edited">
          zuletzt bearbeitet am {{date "DD.MM.YYYY \u\m HH:mm:ss" lastEdited}}
        </div>
      {{/if}}
    </div>
  </div>
</div>